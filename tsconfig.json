{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["es2015", "dom"]
  },
  "include": ["client/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist", "lib", "lib-amd"],
  "ts-node": {
    "files": true
  }
}
